<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="1dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.antonia.tasks.CreateNewTask">

    <TextView android:id="@+id/NameOfTheTask"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Name of the task"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <EditText android:id="@+id/writeNewTask"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write here your task" />

    <TextView android:id="@+id/Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:textSize="25sp"
        android:textColor="#000000" />

    <EditText android:id="@+id/writeDate"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:inputType="date"
        android:hint="dd-mm-yyyy"/>

    <TextView android:id="@+id/Time"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Start Time"
        android:textSize="25sp"
        android:textColor="#000000" />

    <EditText android:id="@+id/writeTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:hint="hh-mm"/>

    <TextView android:id="@+id/theDescription"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Details"
        android:textSize="25sp"
        android:textColor="#000000" />

    <EditText android:id="@+id/Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Describe your task"
        android:inputType="textMultiLine" />

    <Button android:id="@+id/saveChanges"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Save Changes" />

</LinearLayout>